<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.hostandguest.sim.hostandguest.SignIn.homeActivity.HomeActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addAnnonce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="33dp"
        android:clickable="true"
        app:srcCompat="@drawable/icon_plus_48" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_annonces"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addAnnonce"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:scrollbars="vertical" />

</RelativeLayout>
