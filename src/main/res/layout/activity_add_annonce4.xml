<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/fab_margin"
    android:layout_marginRight="@dimen/fab_margin"
    android:layout_marginTop="@dimen/fab_margin"
    android:layout_marginBottom="@dimen/fab_margin"
    tools:context="com.hostandguest.sim.hostandguest.SignIn.homeActivity.AddAnnonce4Activity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="Etes-vous pret a ajouter des photos?" />



    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/btnAddImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:visibility="gone"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:src="@mipmap/btn_gallery"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Decrivez votre logement aux voyageurs" />

    <EditText
        android:id="@+id/edtDescAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:maxLines="3"
        android:layout_marginTop="@dimen/fab_margin"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/desc_annonce"
        android:layout_alignStart="@+id/desc_annonce"
        android:layout_below="@+id/desc_annonce"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Donnez un titre Ã  votre logement" />

    <EditText
        android:id="@+id/edtTitreAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:inputType="textPersonName" />



</LinearLayout>
